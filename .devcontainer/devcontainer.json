{
  "name": "Miso Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.flake8"
      ]
    }
  },
  "postCreateCommand": "pip install flask markdown",
  "forwardPorts": [5000],
  "portsAttributes": {
    "5000": {
      "label": "Miso Editor",
      "onAutoForward": "openPreview"
    }
  }
}